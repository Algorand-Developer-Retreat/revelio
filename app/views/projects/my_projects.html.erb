<% content_for :title, "My Projects" %>

<div class="max-w-6xl mx-auto px-4 sm:px-6 lg:px-8 py-8">
  <div class="flex justify-between items-center mb-6">
    <h1 class="text-3xl font-bold">My Projects</h1>
    <%= link_to "Create New Project", new_project_path, class: "bg-blue-600 hover:bg-blue-700 text-white font-medium py-2 px-4 rounded shadow-sm transition-colors duration-200" %>
  </div>

  <% if @projects.any? %>
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      <% @projects.each do |project| %>
        <div class="bg-white rounded-lg shadow-md overflow-hidden border border-gray-200 hover:shadow-lg transition-shadow duration-200">
          <div class="p-5">
            <div class="flex items-center mb-4">
              <% if project.logo.attached? %>
                <%= image_tag project.logo, class: "w-12 h-12 object-contain rounded-md mr-4" %>
              <% else %>
                <div class="w-12 h-12 bg-gray-100 rounded-md flex items-center justify-center mr-4">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 text-gray-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 16l4.586-4.586a2 2 0 012.828 0L16 16m-2-2l1.586-1.586a2 2 0 012.828 0L20 14m-6-6h.01M6 20h12a2 2 0 002-2V6a2 2 0 00-2-2H6a2 2 0 00-2 2v12a2 2 0 002 2z" />
                  </svg>
                </div>
              <% end %>
              <div>
                <h2 class="text-xl font-semibold"><%= project.name %></h2>
                <p class="text-gray-600"><%= project.abbreviation %></p>
              </div>
            </div>
            
            <% if project.description.present? %>
              <div class="mt-2 mb-4">
                <p class="text-gray-700 line-clamp-2"><%= project.description %></p>
              </div>
            <% end %>
            
            <div class="mt-4 flex justify-between items-center">
              <div>
                <span class="text-sm text-gray-500"><%= project.contracts.count %> contracts</span>
              </div>
              <div class="flex space-x-2">
                <%= link_to "View", project_path(project.abbreviation), class: "text-blue-600 hover:text-blue-800" %>
                <%= link_to "Edit", edit_project_path(project.abbreviation), class: "text-gray-600 hover:text-gray-800" %>
              </div>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  <% else %>
    <div class="bg-white rounded-lg shadow-md p-8 text-center">
      <svg xmlns="http://www.w3.org/2000/svg" class="h-16 w-16 mx-auto text-gray-400 mb-4" fill="none" viewBox="0 0 24 24" stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 11H5m14 0a2 2 0 012 2v6a2 2 0 01-2 2H5a2 2 0 01-2-2v-6a2 2 0 012-2m14 0V9a2 2 0 00-2-2M5 11V9a2 2 0 012-2m0 0V5a2 2 0 012-2h6a2 2 0 012 2v2M7 7h10" />
      </svg>
      <h2 class="text-xl font-medium text-gray-900 mb-2">No projects yet</h2>
      <p class="text-gray-600 mb-6">Get started by creating your first project</p>
      <%= link_to "Create New Project", new_project_path, class: "inline-flex items-center px-4 py-2 border border-transparent text-sm font-medium rounded-md shadow-sm text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500" %>
    </div>
  <% end %>
</div> 